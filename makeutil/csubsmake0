include ../makeutil/optcode
CFLAGSC=-c -Ae $(OPTCODE) -D_HPUX_SOURCE
CFLAGSS=-c -Ae $(OPTCODE) +z -D_HPUX_SOURCE

OS2=../subsrce2_o
OS3=../subsrce3_o
OR2=../subsrcr2_o

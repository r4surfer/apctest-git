
OBJS= $(OBJA) $(OBJB) $(OBJC) $(OBJD) $(OBJP) $(OBJX)

# Flags & controls for HPUX
LD=ld
LDFLAGS=-b -s -o
LDSUFF=.sl
# Note: use -x rather than -s to allow nm to list contents of .sl
# nm [-n] file.sl | grep extern\|entry
# nm [-n] file.sl | grep extern\|code


# Redefine the Suffixes
.SUFFIXES:
.SUFFIXES:	.a .o .c .bas

# 	Create the library
# 
$(LIBRARY):
	(if ( test ! -d $(OBJ) ) then       \
		mkdir $(OBJ);               \
	fi)
	$(LD) $(LDFLAGS) ./$(LIBRARY)$(LDSUFF) $(OBJS)
	mv ./$(LIBRARY)$(LDSUFF) $(OBJ)
